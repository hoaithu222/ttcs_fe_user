{
  "version": 2,
  "framework": "vite",
  "installCommand": "pnpm install --frozen-lockfile || npm ci || yarn install --frozen-lockfile",
  "buildCommand": "pnpm build || npm run build || yarn build",
  "outputDirectory": "dist",
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)\\.(js|css|woff2|png|jpg|jpeg|gif|svg)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}

